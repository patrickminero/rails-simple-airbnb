<div class="jumbotron jumbotron-fluid">
</div>
<div class="d-flex justify-content-around container" id="card-container">
  <div class="container round">
      <div class="card mb-3">
        <div class="card-body">
          <h1 class="text-muted font-weight-normal"><%= @flat.name.upcase %></h1>
          <h3><%= @flat.address %></h3>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <h2>A little more about this flat</h2>
          <h3 class="font-weight-normal"><%= @flat.description %></h3>
        </div>
      </div>  
      <div class="card mb-3">
        <div class="card-body">
          <h3>Details</h3>
          <div class="d-flex">
              <p class="mr-3"><%= '<i class="fas fa-user-alt"></i>'.html_safe %> <%= @flat.number_of_guests %></p>
              <p class="font-weight-bold"> â‚¬<%= @flat.price_per_night %></p>
            </div>
        </div>
      </div>
  </div>
  <div class="w-50">
    <form class="border p-4 rounded bg-white text-dark">
      <h4 class="font-weight-bold secondary">Book this place</h4>
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">from</span>
          </div>
          <input type="text" name="from" class="form-control" placeholder="mm/dd/yyyy" aria-label="Username" aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="form-group">
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">to</span>
          </div>
          <input type="text" name="to" class="form-control" placeholder="mm/dd/yyyy" aria-label="Username" aria-describedby="basic-addon1">
        </div>
      </div>
      <button type="submit" class="btn btn-success w-100 font-weight-bold">Book</button>
    </form>
    <div class="d-flex justify-content-between p-2 align-items-center border rounded mt-3">
      <div><h5>Share</h5></div>
      <div class="social d-flex justify-content-around">
        <a href="#"><i class="fab fa-twitter-square mx-1"></i></a>
        <a href="#"><i class="fab fa-facebook-square mx-1"></i></a>
        <a href="#"><i class="fab fa-pinterest-square mx-1"></i></a>
        <a href="#"><i class="fas fa-envelope-square mx-1"></i></a>
      </div>
    </div>
    
  </div>
</div>